
<table width="50%" cellpadding="3" cellspacing="3" border="3" bordercolor="black">
	<caption><b>Appointment<br></caption>
   <tr>
   	  <th>ID</th>
   	  <th>Date</th>
      <th>Appointment Detail</th>
   	  
    </tr>
  <% @appointments.each do |appointment| %>
  	<tr>
      <td><%= appointment.id %></td>
       <td><%= appointment.date_of_appointment %></td>
       <td><%= appointment.doctor.name %></td>
       <td><%= appointment.patient.name %></td>
       <td>
          <%= link_to "Edit","/appointments/edit/#{appointment.id}" %>
          <%= link_to "Delete","/appointments/destroy/#{appointment.id}" %>
       </td>
    </tr>
  <% end %>

</table>
