
<table width="50%" cellpadding="3" cellspacing="3" border="3" bordercolor="black">
	<caption><b>Departments<br></caption>
   <tr>
   	  <th>ID</th>
   	  <th>Name</th>
      <th>Department Detail</th>
   	  
    	</tr>
  <% @departments.each do |department| %>
  	<tr>
      <td><%= department.id %></td>
       <td><%= department.name %></td>
         <td>
            <%= link_to "Edit","/departments/edit/#{department.id}" %>
            <%= link_to "Delete","/departments/destroy/#{department.id}" %>
            <%= link_to "Show All Doctors",doctors_path(id: department.id) %>
          </td>
    </tr>
  <% end %>

</table>
